	chmod -R 755 $(PACKER_NAME)

.PHONY: finalise_zip
finalise_zip: update_permission
	zip -r $(PACKER_NAME).zip $(PACKER_NAME)


.PHONY: clean
clean:
	rm -rf $(CONTAINER_DIR)
	rm -rf $(BUILD_DIR)